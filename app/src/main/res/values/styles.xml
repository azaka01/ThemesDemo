<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.ThemesDemo.Light" parent="">
        <item name="panelTextColor">@color/colorBlack</item>
        <item name="panelBackground">@color/colorYellow</item>
        <item name="lowerBackground">@color/colorWhite</item>
        <item name="settingsTextColor">@color/grey1</item>
        <item name="settingsBackground">@color/colorWhite</item>
        <item name="settingsCheckImage">@drawable/ic_keyboard_select_check_light</item>
        <item name="settingsStyle">@style/PanelIntroStyleLight</item>
        <item name="dotColorOn">@color/colorYellow</item>
        <item name="dotColorOff">@color/grey1</item>
        <item name="custom_component_style">@style/CustomViewStyleLight</item>
    </style>

    <style name="ThemeOverlay.ThemesDemo.Dark" parent="">
        <item name="panelTextColor">@color/colorRed</item>
        <item name="panelBackground">@color/colorBrown</item>
        <item name="lowerBackground">@color/colorAccent</item>
        <item name="settingsTextColor">@color/colorRed</item>
        <item name="settingsBackground">@color/grey1</item>
        <item name="settingsCheckImage">@drawable/ic_keyboard_select_check_dark</item>
        <item name="settingsStyle">@style/PanelIntroStyleDark</item>
        <item name="dotColorOn">@color/colorRed</item>
        <item name="dotColorOff">@color/colorBrown</item>
        <item name="custom_component_style">@style/CustomViewStyleDark</item>
    </style>

    <style name="PanelIntroStyleLight">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PanelIntroStyleDark">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomViewStyleLight">
        <item name="android:src">@drawable/menu_button_idle_light</item>
        <item name="custom_component_color">@color/grey1</item>
    </style>

    <style name="CustomViewStyleDark">
        <item name="android:src">@drawable/menu_button_idle_dark</item>
        <item name="custom_component_color">@color/colorRed</item>
    </style>

    <style name="SettingsTextBase">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LangSelectLight" parent="SettingsTextBase">
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">?attr/settingsTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/settings_keyboard_option_selected_light</item>
    </style>

</resources>
