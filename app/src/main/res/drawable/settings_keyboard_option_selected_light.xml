<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="?attr/settingsBackground"/>
                    <stroke android:width="1dp" android:color="?attr/settingsBackground" />
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item android:drawable="?attr/settingsCheckImage"
                android:width="24dp" android:height="24dp"
                android:end="16dp"
                android:gravity="end|center_vertical">
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="?attr/settingsBackground"/>
                    <stroke android:width="1dp" android:color="@color/grey1" />
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>